
<EditForm Model="book" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="id">Id:</label>
         <InputNumber id="id" @bind-Value="book.Id" class="form-control"></InputNumber>
    </div>
    <div class="form-group">
        <label for="title">Title:</label>
        <InputText id="title" @bind-Value="book.Title" class="form-control"></InputText>
     </div>
    <div class="form-group">
        <label for="author">Author:</label>
        <InputText id="author" @bind-Value="book.Author" class="form-control"></InputText>
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <InputText id="description" @bind-Value="book.Description" class="form-control"></InputText>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</EditForm>


@code {

    [Parameter]
    public Book book { get; set; }

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }

}